generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Prediction {
  id                  Int      @id @default(autoincrement())  // Added parentheses here
  gameId              Int     
  homeTeamId          Int     
  awayTeamId          Int
  predictedHomeScore  Float
  predictedAwayScore  Float
  homeWinProbability  Float
  awayWinProbability  Float
  confidence          Float
  createdAt           DateTime @default(now())
  gameStartTime       DateTime
  gameStatus          String   // "SCHEDULED", "IN_PROGRESS", "FINAL"
  
  // Results after game
  actualHomeScore     Int?    
  actualAwayScore     Int?
  wasCorrect          Boolean?

  @@index([gameId])
}