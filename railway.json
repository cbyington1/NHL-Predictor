{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "npm install"
    },
    "deploy": {
      "numReplicas": 1,
      "startCommand": "node server.js",
      "healthcheckPath": "/",
      "healthcheckTimeout": 30,
      "restartPolicyType": "ON_FAILURE"
    }
  }